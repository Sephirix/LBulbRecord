<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LBulbRecord.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Unit#:" FontSize="Medium" />
        <Label Text="{Binding Item.unitNumber}" FontSize="Small"/>
        <Label Text="Remarks:" FontSize="Medium" />
        <Label Text="{Binding Item.remarks}" FontSize="Small"/>
    </StackLayout>
</ContentPage>